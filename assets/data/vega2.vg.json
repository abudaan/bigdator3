{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "width": 400,
    "height": 200,
    "padding": 5,
    "data": [
        {
            "name": "table",
            "values": [
                {
                    "category": "A",
                    "amount": 28
                },
                {
                    "category": "B",
                    "amount": 55
                },
                {
                    "category": "C",
                    "amount": 43
                },
                {
                    "category": "D",
                    "amount": 91
                },
                {
                    "category": "E",
                    "amount": 81
                },
                {
                    "category": "F",
                    "amount": 53
                },
                {
                    "category": "G",
                    "amount": 19
                },
                {
                    "category": "H",
                    "amount": 87
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "xscale",
            "type": "band",
            "domain": {
                "data": "table",
                "field": "category"
            },
            "range": "width"
        },
        {
            "name": "yscale",
            "domain": {
                "data": "table",
                "field": "amount"
            },
            "nice": true,
            "range": "height"
        }
    ],
    "axes": [
        {
            "orient": "bottom",
            "scale": "xscale"
        },
        {
            "orient": "left",
            "scale": "yscale"
        }
    ],
    "signals": [
        {
            "name": "tooltip",
            "value": {},
            "on": [
                {
                    "events": {
                        "type": "mouseover",
                        "markname": "point"
                    },
                    "update": "datum"
                },
                {
                    "events": {
                        "type": "mouseout",
                        "markname": "point"
                    },
                    "update": "{}"
                }
            ]
        }
    ],
    "marks": [
        {
            "type": "line",
            "from": {
                "data": "table"
            },
            "encode": {
                "enter": {
                    "x": {
                        "scale": "xscale",
                        "field": "category",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "yscale",
                        "field": "amount"
                    },
                    "stroke": {
                        "value": "#5357a1"
                    },
                    "strokeWidth": {
                        "value": 2
                    }
                }
            }
        },
        {
            "name": "feedback",
            "type": "text",
            "encode": {
                "enter": {
                    "x": {
                        "offset": 20
                    },
                    "y": {
                        "offset": -30
                    },
                    "align": {
                        "value": "center"
                    },
                    "baseline": {
                        "value": "bottom"
                    },
                    "fill": {
                        "value": "#333"
                    },
                    "text": {
                        "value": ""
                    }
                },
                "update": {
                    "text": {
                        "signal": "tooltip.amount ? (tooltip.category + ' ' + tooltip.amount) : ''"
                    }
                }
            }
        },
        {
            "type": "symbol",
            "name": "point",
            "from": {
                "data": "table"
            },
            "encode": {
                "enter": {
                    "x": {
                        "scale": "xscale",
                        "field": "category",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "yscale",
                        "field": "amount"
                    },
                    "fill": {
                        "value": "steelblue"
                    },
                    "stroke": {
                        "value": "white"
                    },
                    "strokeWidth": {
                        "value": 1
                    },
                    "size": {
                        "value": 64
                    }
                },
                "update": {
                    "fill": [
                        {
                            "test": "datum === tooltip",
                            "value": "red"
                        },
                        {
                            "value": "steelblue"
                        }
                    ],
                    "size": [
                        {
                            "test": "datum === tooltip",
                            "value": 100
                        },
                        {
                            "value": 64
                        }
                    ]
                }
            }
        }
    ]
}